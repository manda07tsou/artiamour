{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}
    <div class="jumbotron">
        <span>Bienvenue chez</span>
        <div class="section-title font-secondary">ARTIAMOUR</div>
        <span>Ici,vous pouvez découvrir tous nos produits réalisés</span>
    </div>
    <div class="container mt-3 text-center">
        <div class="section-title text-left font-secondary">Nos produits</div>
        <div class="l-product-page">
            <div style="width:100%">
                <div class="products">
                    {% for product in products %}
                        {% include "product/_card.html.twig" %}
                    {% endfor %}
                </div>
                <div class="mt-2">
                    {{ knp_pagination_render(products) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

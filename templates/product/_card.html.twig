<article class="card">
    <a href="?mod=product&page=show" class="card-link" title="cliquer pour voir le detail"></a>
    <div class="card-body">
        <div class="card-title">{{ product.name }}</div>
    </div>
    <div class="card-illustration">
        <img src="images/products/{{ product.filename }}" class="card-img" alt="">
    </div>
</article>
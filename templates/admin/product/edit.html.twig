{% extends 'admin/base.html.twig' %}

{% block title %}Editer produit{% endblock %}

{% block body %}
<div class="container my-3">
    <div class="section-title text-left">Editer produit</div>
    <div class="grid-2">
        <div class="">
            {% include "admin/product/_form.html.twig" %}
        </div>
        <div class="hide-mobile">
            {% set product = form.vars.value %}
            <div>
                <img src="{{ vich_uploader_asset(product) | imagine_filter('medium') }}" alt="produit-{{ product.id }}" class="product-img">
            </div>
        </div>
    </div>

</div>
{% endblock %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"> #}
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset("dist/app.css") }}">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% set route = app.request.get('_route') %}
        <header class="header">
            <a href="{{ path("app_home") }}" class="logo">
                <img src="/images/logo1.jpg" alt="logo">
            </a>

            <div class="burger">
                <span></span>
                <span></span>
                <span></span>
            </div>

            <nav class="nav">
                <a href="{{ path("app_home")}}" class="nav-item {% if('_home' in route) %}active{% endif %}">Home</a>
                <a href="{{ path("app_product")}}" class="nav-item  {% if('_product' in route) %}active{% endif %}">Produits</a>
                <a href="{{ path("app_about")}}" class="nav-item  {% if('_about' in route) %}active{% endif %}">A propos</a>
                <a href="{{ path("app_contact")}}" class="nav-item  {% if('_contact' in route) %}active{% endif %}">Contact</a>
            </nav>
        </header>

        {% block body %}
        {% endblock %}

        <footer class="footer text-center">
            Designé et dévéloppée par RAHAJANIRINA Vonintsoa
        </footer>
        {% block javascripts %}
            <script src="{{ asset("dist/app.js")}}"></script>
        {% endblock %}
    </body>
</html>

{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="auth-box">
            <div class="section-title">CONNEXION</div>
            <form action="?mod=admin">
                <div class="mb-2">
                    <label for="identifiant">Identifiant</label>
                    <input type="email" id="identifiant" class="form-input">
                </div>
                <div class="mb-2">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" class="form-input">
                </div>
                <div class="mb-2">
                    <input type="checkbox" id="remember_me">
                    <label for="remember_me">Se souvenir de moi</label>
                </div>
                <button class="btn-primary btn-large">Se connecter</button>
            </form>
        </div>
    </div>
{% endblock %}
